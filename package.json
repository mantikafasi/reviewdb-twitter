{
    "name": "reviewdb-twitter",
    "version": "0.1.0",
    "description": "A chrome extension which lets you to leave comments on other peoples twitter profiles",
    "private": true,
    "scripts": {
        "build": "node esbuild.config.mjs",
        "w": "pnpm watch",
        "watch": "pnpm build --watch",
        "pack": "node pack.js",
        "repack": "npm run build && npm run pack",
        "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\""
    },
    "devDependencies": {
        "@types/chrome": "^0.0.237",
        "@types/node": "^20.2.5",
        "@types/react": "^18.2.7",
        "adm-zip": "^0.5.10",
        "esbuild": "0.17.19",
        "esbuild-copy-static-files": "^0.1.0",
        "esbuild-plugin-external-global": "^1.0.1",
        "prettier": "^2.8.8",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "jsposed": "^1.0.4",
        "react-toastify": "^9.1.3"
    }
}
